{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "KiraTrans",
    "version": "0.0.1-dev.1",
    "identifier": "com.seiyacooper.kiratrans",
    "build": {
        "frontendDist": "../src/dist/",
        "devUrl": "http://localhost:1270",
        "beforeDevCommand": "yarn vite",
        "beforeBuildCommand": "yarn vite build"
    },
    "app": {
        "windows": [
            {
                "title": "KiraTrans",
                "width": 476,
                "height": 595,
                "resizable": true,
                "fullscreen": false,
                "visible": false
            }
        ],
        "security": {
            "csp": "http://asset.localhost",
            "capabilities": [
                {
                    "identifier": "screen-area-selection",
                    "windows": ["screen-area-selection"],
                    "permissions": [
                        "core:path:default",
                        "core:window:allow-show",
                        "core:window:allow-close",
                        "core:window:allow-unminimize",
                        "core:window:allow-get-all-windows"
                    ]
                },
                "default",
                "desktop"
            ],
            "assetProtocol": {
                "enable": true,
                "scope": ["$APPCACHE/*"]
            }
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
    }
}
